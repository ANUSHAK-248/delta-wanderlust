
<% layout("/layouts/boilerplate") %>

<div class="row">
<div class="col-8 offset-2">
   <h2>Edit your Listing</h2>

     <form action="/listing/savechanges/<%=listing._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
             <input required class="form-control" id="title" type="text" name="listing[title]" value="<%=listing.title%>">
             <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">In-valid</div>
        </div>

        <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <textarea required class="form-control" id="desc" name="listing[description]" id="" value="<%=listing.description%>" ><%=listing.description%></textarea>
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">In-valid</div>
        </div>

        <div class="mb-3">
            <img class="editimage" src="<%=originalImageURL%>" alt="">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new image</label>
            <input class="form-control" type="file" id="image" name="listing[imagefile]" >
            <!-- <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">In-valid</div> -->  
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
             <input required class="form-control" type="number" id="price" name="listing[price]" value=<%=listing.price%>>
             <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">In-valid</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input required class="form-control" type="text" id="location" name="listing[location]" value="<%=listing.location%>">
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">In-valid</div>
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input required class="form-control" type="text" id="country" name="listing[country]" value="<%=listing.country%>">
            <div class="valid-feedback">Valid</div>
            <div class="invalid-feedback">In-valid</div>
        </div>
        
         <button class="add-btn">Save the changes</button>
    </form>
</div>
</div>